<?xml version="1.0" encoding="utf-8"?>
<manifest package="viktorkhon.com.udacity_project_4_musicalstructure"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ForYou"
            android:label="@string/for_you">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".Playlist"
            android:label="@string/playlists">
        </activity>
        <activity
            android:name=".Radio"
            android:label="@string/radio">
        </activity>
        <activity
            android:name=".YourLibrary"
            android:label="@string/your_library">
        </activity>
        <activity
            android:name=".Payment"
            android:label="@string/payment">
        </activity>
    </application>

</manifest>